{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "ES6",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [ "src/typings", "node_modules/@types"]
  },
  "include": ["src/**/*", "tools/**/*"]
}